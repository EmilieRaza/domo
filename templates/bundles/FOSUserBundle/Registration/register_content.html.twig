{% trans_default_domain 'FOSUserBundle' %}

<div class="card">
    <div class="card-header">
        <h2 class="form-signin-heading text-center h4">Inscription</h2>
    </div>
	<div class="card-body">
		{{ form_start(form)}}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.firstname)}}
            </div>
            <div class="col-md-6">
                {{ form_row(form.lastname)}}
            </div>
        </div>
        {{ form_row(form.company)}}
        {{ form_row(form.phone)}}
		{{ form_widget(form) }}
		<div>
			<input type="submit" class="btn btn-primary btn-block" value="{{ 'registration.submit'|trans }}"/>
		</div>
		{{ form_end(form) }}
	</div>
</div>
