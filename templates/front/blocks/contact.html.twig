<div class="card-form">
    {{ form_start(form)}}
            {{ form_row(form.type)}}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.firstname)}}
                </div>
                <div class="col-md-6 ">
                    {{ form_row(form.lastname)}}
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.email)}}
                </div>
                <div class="col-md-6 ">
                    {{ form_row(form.phone)}}
                </div>
            </div>
             {{ form_row(form.message)}}
             <br>
             <div class="form-group text-center">
                <button class="btn btn-primary"><i class="fas fa-paper-plane"></i> Envoyer</button>
            </div>
    {{form_end(form)}}
</div>
