{% extends 'back/layout.html.twig' %}

{% block title %} Modifier {{'Command'|transchoice(1)}} {% endblock %}

{% block content %}

<section class="section-padding">
    <div class="container">
        <h1>Modifier {{'Command'|transchoice(1)}}</h1>
        <div class="shape"></div>

        <div class="text-right mt-4">
            <a href="{{ path('admin_command_search') }}" class="btn btn-primary" role="button">
                <i class="fa fa-reply"></i> Retour
            </a>
        </div>
        <div class="card mt-4 mb-4">
            <div class="card-header text-center">
                <h4>Formulaire {{'Command'|transchoice(1)}}</h4>
            </div>
            <div class="card-content">
                {{ form_start(form) }}
                                                                                    {{ form_row(form.orderKey) }}
                                                                    {{ form_row(form.firstname) }}
                                                                    {{ form_row(form.lastname) }}
                                                                    {{ form_row(form.email) }}
                                                                    {{ form_row(form.phone) }}
                                                                    {{ form_row(form.address) }}
                                                                    {{ form_row(form.zipcode) }}
                                                                    {{ form_row(form.city) }}
                                                                    {{ form_row(form.stripeKey) }}
                                                                    {{ form_row(form.createdAt) }}
                                                <br>
                <button class="btn btn-primary">Modifier</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}