{% extends 'back/layout.html.twig' %}

{% block title %} Modifier {{'Configuration'|transchoice(1)}} {% endblock %}

{% block content %}

<section class="section-padding">
    <div class="container">
        <h1>Modifier {{'Configuration'|transchoice(1)}}</h1>
        <div class="shape"></div>

        <div class="text-right mt-4">
            <a href="{{ path('admin_configuration_search') }}" class="btn btn-primary" role="button">
                <i class="fa fa-reply"></i> Retour
            </a>
        </div>
        <div class="card mt-4 mb-4">
            <div class="card-header text-center">
                <h4>Formulaire {{'Configuration'|transchoice(1)}}</h4>
            </div>
            <div class="card-content">
                {{ form_start(form) }}
                {{ form_widget(form)}}
                {{ form_row(form.value) }}
                <br>
                <button class="btn btn-primary">Modifier</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}